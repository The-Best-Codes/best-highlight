{
  "name": "best-highlight",
  "version": "0.0.7",
  "description": "A lightweight syntax highlighter",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "readme": "README.npm.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/The-Best-Codes/best-highlight.git"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./themes/*": {
      "import": "./dist/themes/*",
      "require": "./dist/themes/*",
      "default": "./dist/themes/*"
    }
  },
  "scripts": {
    "build": "rm -rf dist && npm run build:js && npm run build:css && npm run minify:css",
    "build:js": "tsup src/index.ts --format cjs,esm --dts --minify",
    "build:css": "mkdir -p dist/themes && cp src/themes/*.css dist/themes/",
    "minify:css": "tsup dist/themes/*.css --minify --clean=false --outDir dist/themes",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@vitest/coverage-v8": "^2.1.5",
    "eslint": "^9.14.0",
    "globals": "^15.12.0",
    "jsdom": "^25.0.1",
    "terser": "^5.36.0",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0",
    "vitest": "^2.1.5"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "syntax-highlight",
    "highlighting",
    "library",
    "syntax"
  ],
  "author": "The-Best-Codes",
  "license": "MIT"
}
